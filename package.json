{
    "name": "task-manager",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "cd server && npm run dev",
        "dev:client": "cd client && npm run dev",
        "dev:test": "concurrently \"npm run dev:server:test\" \"npm run dev:client\"",
        "dev:server:test": "cd server && cross-env NODE_ENV=test npm run dev",
        "build": "concurrently \"npm run build:server\" \"npm run build:client\"",
        "build:server": "cd server && npm run build",
        "build:client": "cd client && npm run build",
        "start": "node server/dist/index.js",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev --name init",
        "prisma:studio": "prisma studio",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "format": "prettier --write .",
        "pretest:e2e": "kill-port 5173 5000",
        "pretest:e2e:ci": "kill-port 5173 5000",
        "migrate:test": "cross-env NODE_ENV=test DATABASE_URL='file:./dev-test.db' prisma migrate reset --force --skip-seed --schema=prisma/schema.prisma",
        "test:e2e:open": "cypress open",
        "test:e2e:run": "cypress run",
        "test:e2e": "npm run migrate:test && npm run pretest:e2e && npm run e2e:open:full",
        "test:e2e:ci": "npm run pretest:e2e:ci && npm run e2e:run:full",
        "e2e:run:full": "concurrently -k -s first -n \"SERVER,CLIENT,CYPRESS\" -c \"green,yellow,blue\" \"npm run dev:server:test\" \"npm run dev:client\" \"npm run test:e2e:run\"",
        "e2e:open:full": "concurrently -k -s first -n \"SERVER,CLIENT,CYPRESS\" -c \"green,yellow,blue\" \"npm run dev:server:test\" \"npm run dev:client\" \"npm run test:e2e:open\""
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@badeball/cypress-cucumber-preprocessor": "^22.0.1",
        "@bahmutov/cypress-esbuild-preprocessor": "^2.2.5",
        "@cucumber/cucumber": "^11.3.0",
        "@eslint/js": "^9.27.0",
        "@stylistic/eslint-plugin-ts": "^4.2.0",
        "@testing-library/cypress": "^10.0.3",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^22.15.18",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "cypress": "^14.4.0",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.4.0",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^16.1.0",
        "kill-port": "^2.0.1",
        "prettier": "^3.5.3",
        "prisma": "^6.8.2",
        "start-server-and-test": "^2.0.12",
        "supertest": "^7.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1"
    },
    "dependencies": {
        "@prisma/client": "^6.8.2",
        "jsonwebtoken": "^9.0.2"
    }
}
